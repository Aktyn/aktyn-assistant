{
  "name": "@aktyn-assistant-tools/assistant",
  "version": "2.2.0",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "start": "node ./dist/index.js",
    "start:test": "node ./dist/test.js",
    "dev:test": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"yarn run build && yarn run start:test || exit 1\" --ignore dist/ -e ts",
    "dev": "nodemon --watch ./src --exec \"yarn run build\" --ignore dist/ -e ts",
    "format": "prettier --write src/**/*{.ts,.tsx}",
    "lint": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@aktyn-assistant/common": "*",
    "cheerio": "^1.0.0",
    "open": "^10.1.1",
    "puppeteer": "^24.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
}
