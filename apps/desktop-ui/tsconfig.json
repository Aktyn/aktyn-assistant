{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ESNext.String"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "noEmit": true,
    "incremental": true,
    "verbatimModuleSyntax": false,
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
    "baseUrl": ".",
    "types": [
      "node",
      "jest",
      "prismjs"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    ".eslintrc.js",
    "../../packages/common/src/utils/consts.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}