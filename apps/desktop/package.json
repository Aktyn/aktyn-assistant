{
  "name": "aktyn-assistant-desktop",
  "version": "2.2.0",
  "private": true,
  "author": "Rados≈Çaw Krajewski (Aktyn) <aktyn3@gmail.com>",
  "description": "Aktyn Assistant is an application that allows you to interact with an AI on various types of devices while performing regular tasks.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aktyn/aktyn-assistant.git"
  },
  "main": "./dist/index.js",
  "homepage": "https://github.com/Aktyn/aktyn-assistants",
  "scripts": {
    "package": "cross-env DEBUG=electron-packager electron-forge package --verbose",
    "make": "./fix-modules.sh && electron-forge make && shx rm -rf ./node_modules",
    "publish": "./fix-modules.sh && electron-forge publish && shx rm -rf ./node_modules",
    "build": "tsc -p ./tsconfig.json",
    "start:no-electron": "node ./dist/index.js",
    "start:legacy": "electron ./dist/index.js",
    "start": "electron-forge start",
    "dev": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"yarn run build && yarn start:legacy || exit 1\" -e ts,html",
    "test": "vitest run --passWithNoTests",
    "test:ci": "vitest run --coverage --passWithNoTests",
    "test:watch": "vitest --watch",
    "format": "prettier --write src/**/*{.ts,.tsx}",
    "lint": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@aktyn-assistant/common": "*",
    "@aktyn-assistant/core": "*",
    "auto-launch": "^5.0.6",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.0",
    "update-electron-app": "^3.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-flatpak": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/publisher-github": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/animejs": "^3.1.12",
    "@types/auto-launch": "^5.0.5",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^22.2.0",
    "@types/prismjs": "^1.26.4",
    "@types/showdown": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vitest/coverage-v8": "^2.0.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "electron": "^31.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.4"
  }
}
