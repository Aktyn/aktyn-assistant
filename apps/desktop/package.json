{
  "name": "aktyn-assistant-desktop",
  "version": "3.1.0",
  "private": true,
  "author": "Rados≈Çaw Krajewski (Aktyn) <aktyn3@gmail.com>",
  "description": "Aktyn Assistant is an application that allows you to interact with an AI on various types of devices while performing regular tasks.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aktyn/aktyn-assistant.git"
  },
  "main": "./dist/index.js",
  "homepage": "https://github.com/Aktyn/aktyn-assistants",
  "scripts": {
    "package": "cross-env DEBUG=electron-packager electron-forge package --verbose",
    "make": "./fix-modules.sh && electron-forge make && shx rm -rf ./node_modules",
    "publish": "./fix-modules.sh && electron-forge publish && shx rm -rf ./node_modules && yarn install",
    "build": "tsc -p ./tsconfig.build.json",
    "start:no-electron": "node ./dist/index.js",
    "start:legacy": "electron ./dist/index.js",
    "start": "electron-forge start",
    "dev": "cross-env NODE_ENV=dev nodemon --legacy-watch ./src/**/* --exec \"yarn run build && yarn start:legacy || exit 1\" -e ts,html",
    "test": "vitest run --passWithNoTests",
    "test:ci": "vitest run --coverage --passWithNoTests",
    "test:watch": "vitest --watch",
    "format": "prettier --write src/**/*{.ts,.tsx}",
    "lint": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@aktyn-assistant/common": "*",
    "@aktyn-assistant/core": "*",
    "auto-launch": "^5.0.6",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "update-electron-app": "^3.1.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-flatpak": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/publisher-github": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/auto-launch": "^5.0.5",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^24.0.10",
    "@types/prismjs": "^1.26.5",
    "@types/showdown": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.1",
    "electron": "^37.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
