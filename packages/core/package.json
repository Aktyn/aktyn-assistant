{
	"name": "@aktyn-assistant/core",
	"version": "2.2.0",
	"private": true,
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"scripts": {
		"build": "tsc -p ./tsconfig.json",
		"dev": "nodemon --watch ./src --exec \"yarn run build\" --ignore lib/ -e ts",
		"setup:whisper": "node ./scripts/setupWhisper.js",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"test:watch": "vitest",
		"format": "prettier --write src/**/*{.ts,.tsx}",
		"lint": "eslint src/**/*.ts --fix",
		"typecheck": "tsc --noEmit --skipLibCheck"
	},
	"dependencies": {
		"@aktyn-assistant-tools/assistant": "*",
		"@aktyn-assistant-tools/web-search": "*",
		"@aktyn-assistant/common": "*",
		"appdata-path": "^1.0.0",
		"audic": "^3.0.2",
		"ffmetadata": "^1.7.0",
		"gtts": "^0.2.1",
		"node-mic": "^1.0.1",
		"node-notifier": "^10.0.1",
		"openai": "^4.55.4",
		"pino": "^9.3.2",
		"pino-multi-stream": "^6.0.0",
		"sentence-tokenizer": "^1.0.1",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@types/node": "^22.2.0",
		"@types/node-notifier": "^8.0.5",
		"@types/pino-multi-stream": "^5.1.6",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.1",
		"@typescript-eslint/parser": "^8.0.1",
		"@vitest/coverage-v8": "^2.0.4",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.2.1",
		"nodemon": "^3.1.4",
		"prettier": "^3.3.3",
		"prettier-eslint": "^16.3.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^2.0.4"
	}
}
