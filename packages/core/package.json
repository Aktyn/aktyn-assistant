		"nodemon": "^3.1.10",
		"prettier": "^3.5.3",
		"prettier-eslint": "^16.4.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.31.1",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.2"
